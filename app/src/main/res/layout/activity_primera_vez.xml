<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/design_default_color_on_primary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".PrimeraVez">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/SingingGoogle"
            style="?attr/buttonBarStyle"
            android:layout_width="298dp"
            android:layout_height="48dp"
            android:contentDescription="standard_icon_btn_desc"
            android:onClick="SingingGoogle"
            android:text="Iniciar sesion"
            app:icon="@drawable/google"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.495"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.577" />

        <Button
            android:id="@+id/iconButton"
            style="?attr/materialIconButtonStyle"
            android:layout_width="182dp"
            android:layout_height="66dp"
            android:contentDescription="standard_icon_btn_desc"
            android:text="Continuar"
            app:icon="@drawable/flecha_derecha"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.973" />

        <TextView
            android:id="@+id/textView2"
            android:textColor="#914D00"
            style="@style/MaterialAlertDialog.Material3.Title.Text.CenterStacked"
            android:layout_width="305dp"
            android:layout_height="57dp"
            android:layout_marginTop="12dp"
            android:text="BIENVENIDO"
            android:textSize="48sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.047"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/textView3"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_width="370dp"
            android:layout_height="39dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:text="Vamos a configurar la aplicacion."
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.324"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView2" />

        <TextView
            android:id="@+id/textView4"
            style="@style/MaterialAlertDialog.Material3.Body.Text"
            android:layout_width="370dp"
            android:layout_height="39dp"
            android:layout_marginStart="4dp"
            android:text="Elige tus dias de descanso."
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.324"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            app:layout_constraintVertical_bias="0.043" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroup"
            style="?attr/materialIconButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.324">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipLunes"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lunes"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="200dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMartes"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Martes"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="200dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipMiercoles"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miercoles"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="200dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipJueves"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jueves"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="200dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipViernes"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Viernes"
                tools:layout_editor_absoluteX="173dp"
                tools:layout_editor_absoluteY="200dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSabado"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sabado"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="200dp" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipDomingo"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Domingo"
                tools:layout_editor_absoluteX="73dp"
                tools:layout_editor_absoluteY="200dp" />

        </com.google.android.material.chip.ChipGroup>

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>